<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6cc2f4">

        <!-- 选择城市 -->
        <Button
            android:id="@+id/citySelectBtn_message"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y40"
            android:layout_margin="10dp"
            android:text="@string/select_city"
            android:textSize="@dimen/TextSize_40"
            android:background="@null"/>

        <!-- 搜索功能 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <EditText
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y40"
                android:layout_centerInParent="true"
                android:text="  请输入关键字            "
                android:textSize="@dimen/TextSize_40"/>
        </RelativeLayout>

        <!-- 扫一扫 -->
        <Button
            android:layout_width="@dimen/x63"
            android:layout_height="@dimen/y40"
            android:background="@null"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/btn_sao_1_sao_selector"
            android:text="扫一扫"
            android:textSize="@dimen/TextSize_20"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"/>


    <ListView
        android:id="@+id/listView_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>